function formatarMensagens()
var listamensagens =
["mensagem 1," "mensagem 2", "mensagem 3"];
var html = "";
for(var i = 0; i< listamensagens.length; i++) {
  html +='<div; class="chat-mensage"><span class="chat-mensage-rica"<!--implementar rica aqui --></span></div;'
  retorn html
}
function atualizarHTML(html){
  document.getElementById("chat-mensagens").innerHTML = html;
}
